{
  "name": "splitflasher",
  "version": "1.0.3",
  "description": "Split keyboard firmware flasher for dual UF2 devices",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite dev",
    "dev:main": "tsc -p tsconfig.node.json --watch",
    "dev:electron": "wait-on dist/main.js dist/preload.js dist/common/ipc.js && VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:main && vite build",
    "build:main": "tsc -p tsconfig.node.json",
    "lint": "tsc --noEmit",
    "dist:mac": "npm run build && electron-builder --mac --arm64 --x64 --publish=never"
  },
  "keywords": [
    "electron",
    "react",
    "keyboard",
    "firmware"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "chokidar": "^4.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "dev.splitflasher.app",
    "productName": "SplitFlasher",
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main.js"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "identity": null,
      "icon": "build/icon.icns"
    }
  }
}
